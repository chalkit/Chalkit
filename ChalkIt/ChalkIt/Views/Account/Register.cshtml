@model ChalkIt.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}
@section styles{
    @Styles.Render("~/Content/registration.css")
}
<section id="registrationForm">
    <div id="registrationContent">
        <h2>
            Create an Account</h2>
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <br />
            <div>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <br />
            <div>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
            <br />
            <div>
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName)
                @Html.ValidationMessageFor(m => m.FirstName)
            </div>
            <br />
            <div>
                @Html.LabelFor(m => m.LastName)
                @Html.TextBoxFor(m => m.LastName)
                @Html.ValidationMessageFor(m => m.LastName)
            </div>
            <br />
            <div>
                @Html.LabelFor(m => m.PersonalEmail)
                @Html.TextBoxFor(m => m.PersonalEmail)
                @Html.ValidationMessageFor(m => m.PersonalEmail)
            </div>
            <br />
            <div>
                @Html.LabelFor(m => m.AccountType):&nbsp;&nbsp;&nbsp;
                @Html.RadioButtonFor(m => m.AccountType, ChalkIt.Models.AccountType.Author) Author &nbsp;&nbsp;&nbsp;
                @Html.RadioButtonFor(m => m.AccountType, ChalkIt.Models.AccountType.Strudent) Student &nbsp;&nbsp;&nbsp;
                @Html.ValidationMessageFor(m => m.AccountType)
            </div>
            <br />
            <div id="checkBoxDisplay">
                @Html.CheckBoxFor(m => m.TermsAndConditions)
                <label for="TermsAndConditions">I agree to @Html.ActionLink("Terms and Conditions","TermsAndConditions","Account")</label>
                <br />@Html.ValidationMessageFor(m => m.TermsAndConditions)
                <br />
                <br />
                <button type="submit" class="submit">
                    Register</button>
            </div>
   
        }
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
